# Server Configuration
NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/office_tool_db

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_change_this_in_production_min_32_chars
JWT_EXPIRES=15m
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_change_this_in_production_min_32_chars
JWT_REFRESH_EXPIRES=7d

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
